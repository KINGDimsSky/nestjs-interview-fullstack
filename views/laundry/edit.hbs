<div class="max-w-2xl mx-auto">
    <div class="mb-10 flex items-center gap-4">
        <a href="/laundry" class="p-3 bg-zinc-900 border border-zinc-800 rounded-2xl hover:bg-zinc-800 transition text-zinc-400">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
        </a>
        <h1 class="text-3xl font-bold text-white">Update Transaction</h1>
    </div>

    <div class="bg-zinc-900 border border-zinc-800 rounded-[2.5rem] p-10 shadow-2xl">
        <div class="mb-8 p-6 bg-indigo-600/10 border border-indigo-500/20 rounded-3xl">
            <div class="text-xs font-bold text-indigo-400 uppercase tracking-widest mb-1">Editing Transaction</div>
            <div class="text-xl font-bold text-zinc-100">{{transaction.customer.name}}</div>
        </div>

        <form action="/laundry/{{transaction.id}}?_method=PATCH" method="POST" class="space-y-8">
            <div class="grid grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label class="text-xs font-bold text-zinc-500 uppercase tracking-widest ml-1">Weight (kg)</label>
                    <input type="number" step="0.1" name="weight" value="{{transaction.weight}}" required 
                        class="w-full bg-zinc-950 border border-zinc-800 rounded-2xl px-6 py-4 focus:ring-2 focus:ring-indigo-600 outline-none text-zinc-100">
                </div>
                <div class="space-y-2">
                    <label class="text-xs font-bold text-zinc-500 uppercase tracking-widest ml-1">Price (Rp)</label>
                    <input type="number" name="price" value="{{transaction.price}}" required 
                        class="w-full bg-zinc-950 border border-zinc-800 rounded-2xl px-6 py-4 focus:ring-2 focus:ring-indigo-600 outline-none text-zinc-100">
                </div>
            </div>

            <div class="space-y-2">
                <label class="text-xs font-bold text-zinc-500 uppercase tracking-widest ml-1">Order Status</label>
                <select name="status" class="w-full bg-zinc-950 border border-zinc-800 rounded-2xl px-6 py-4 focus:ring-2 focus:ring-indigo-600 outline-none text-zinc-100 appearance-none">
                    <option value="PENDING" {{#if (eq transaction.status 'PENDING')}}selected{{/if}}>PENDING</option>
                    <option value="WASHING" {{#if (eq transaction.status 'WASHING')}}selected{{/if}}>WASHING</option>
                    <option value="DONE" {{#if (eq transaction.status 'DONE')}}selected{{/if}}>DONE</option>
                </select>
            </div>

            <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-500 text-white py-5 rounded-2xl font-bold shadow-xl shadow-indigo-600/20 transition-all active:scale-[0.98]">
                Save Changes
            </button>
        </form>
    </div>
</div>