<div class="max-w-2xl mx-auto">
    {{!-- Navigation Header --}}
    <div class="mb-10 flex items-center gap-4">
        <a href="/customers" class="p-3 bg-zinc-900 border border-zinc-800 rounded-2xl hover:bg-zinc-800 transition text-zinc-400 group">
            <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
        </a>
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight">New Customer</h1>
            <p class="text-sm text-zinc-500 mt-1">Daftarkan pelanggan baru ke dalam sistem database.</p>
        </div>
    </div>

    <div class="bg-zinc-900 border border-zinc-800 rounded-[2.5rem] p-10 shadow-2xl backdrop-blur-md">
        <form action="/customers/create" method="POST" class="space-y-8">
            <div class="space-y-6">
                <div class="space-y-2">
                    <label class="text-xs font-bold text-zinc-500 uppercase tracking-widest ml-1">Full Name</label>
                    <input type="text" name="name" required placeholder="Contoh: John Doe"
                        class="w-full bg-zinc-950 border border-zinc-800 rounded-2xl px-6 py-4 focus:ring-2 focus:ring-indigo-600 focus:border-transparent transition-all outline-none text-zinc-100 placeholder:text-zinc-700">
                </div>
                <div class="space-y-2">
                    <label class="text-xs font-bold text-zinc-500 uppercase tracking-widest ml-1">Phone Number</label>
                    <input type="text" name="phone" required placeholder="0812xxxxxxx"
                        class="w-full bg-zinc-950 border border-zinc-800 rounded-2xl px-6 py-4 focus:ring-2 focus:ring-indigo-600 focus:border-transparent transition-all outline-none text-zinc-100 placeholder:text-zinc-700">
                </div>
                <div class="space-y-2">
                    <label class="text-xs font-bold text-zinc-500 uppercase tracking-widest ml-1">Address</label>
                    <textarea name="address" rows="3" required placeholder="Alamat lengkap pelanggan..."
                        class="w-full bg-zinc-950 border border-zinc-800 rounded-2xl px-6 py-4 focus:ring-2 focus:ring-indigo-600 focus:border-transparent transition-all outline-none text-zinc-100 placeholder:text-zinc-700"></textarea>
                </div>
            </div>

            <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-500 text-white py-5 rounded-2xl font-bold shadow-xl shadow-indigo-600/20 transition-all active:scale-[0.98]">
                Create Customer Account
            </button>
        </form>
    </div>
</div>